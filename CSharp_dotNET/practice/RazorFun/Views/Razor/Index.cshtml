<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Here are come delicious foods!</h1>

    @{
        List<string> Foods = new List<string>();
        Foods.Add("Apple Pie");
        Foods.Add("Pizza");
        Foods.Add("Cinnamon Rolls");
        Foods.Add("Lasagna");
        Foods.Add("Donuts");
        Foods.Add("Chocolate Cake");
        Foods.Add("Burritos");
        Foods.Add("C");
    }

    @foreach(string item in Foods){
        if (item.StartsWith("C")) {
            <p style="color:red">@item</p>
        } else {
            <p>@item</p>
        }
    }

</body>
</html>