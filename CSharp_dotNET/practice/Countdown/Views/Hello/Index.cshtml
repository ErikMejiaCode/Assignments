<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    @{
        DateTime endDate = new DateTime(2023, 2, 22, 7, 00, 00);
        TimeSpan difference = endDate - DateTime.Now;
    }
    <h1>Countdown</h1>
    <div class="container">
        <div class="left-time">
            <h2>Current Time/Date 🕰 🗓</h2>
            <h3>@DateTime.Now.ToString("MMMM dd, yyyy h:mm tt")</h3>
        </div>
        <div class="right-time">
            <h2>Disney Cruise 🐭 🛳</h2>
            <h3>@endDate.ToString("MMMM dd, yyyy h:mm tt")</h3>
        </div>
    </div>
    <div class="time-remaining">
        <h2>Time Reminaing 🛳</h2>
        <h3>@difference.Days Day(s), @difference.Hours Hour(s), @difference.Minutes Minutes(s), @difference.Seconds Seconds(s)</h3>
    </div>
</body>
</html>