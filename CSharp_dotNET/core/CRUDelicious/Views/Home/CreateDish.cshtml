@{
    ViewData["Title"] = "Create New Dish";
}

@model Dish

<div class="text-center">
    <h2 class="text-center">Add a new Dish</h2>
    <div class="d-flex justify-content-center">
        <a href="/">Home</a>
        <p>&nbsp | Add a Dish</p>
    </div>


    <form asp-action="CreateDish" asp-controller="Home" method="post">
        <div class="d-flex justify-content-between">

            <div class="col-4 d-flex flex-column">
                <label asp-for="Chef">Chef's Name</label>
                <input asp-for="Chef">
                <span asp-validation-for="Chef" class="text-danger"></span>
                <label asp-for="Name">Name of Dish</label>
                <input asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories">
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>

            <div class="col-2 d-flex flex-column">
                <label asp-for="Tastiness">Tastiness</label>
                <Select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </Select>
                <span asp-validation-for="Tastiness" class="text-danger"></span>
            </div>

            <div class="col-4 d-flex flex-column">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" cols="10" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <input type="submit" value="Submit" class="btn btn-sm btn-info mt-2">
            </div>
        </div>
    </form>
</div>