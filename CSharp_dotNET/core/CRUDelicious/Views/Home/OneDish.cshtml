@{
    ViewData["Title"] = "Show Dish";
}

<link rel="stylesheet" href="~/css/style.css">

@model Dish

<div class="text-center">
    <h1 class="mt-2">@Model.Name</h1>
    <div class="d-flex justify-content-center">
        <a href="/">Home</a>|
        <a href="/dishes/new">Add a Dish</a>
    </div>
</div>

<div class="ml-3">
    <p class="border-bottom">@Model.Name by @Model.Chef</p>
    <p>@Model.Description</p>
    <p>Calories: @Model.Calories</p>
    <p>Tastiness: @Model.Tastiness</p>
    <div class="d-flex justify-content-around">
        <form asp-action="DestroyDish" asp-controller="Home" method="post" asp-route-dishId="@Model.DishId">
            <input type="submit" value="Delete" class="btn btn-danger btn-sm">
        </form>
        <a href="/dishes/@Model.DishId/edit" class="btn btn-sm btn-info">Edit</a>
    </div>
</div>
