@{
    ViewData["Title"] = "Chef Page";
}

@model Dish

<div class="text-center">
    <h1 class="bottom-border">Add a Dish</h1>
</div>


<form asp-action="CreateDish" asp-controller="Home" method="post">
    <div class="d-flex justify-content-between">
        <div class="col-4 d-flex flex-column">
            <div>
                <label asp-for="Name">Name of Dish:</label>
                <input asp-for="Name"> <br>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories"> <br>
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 d-flex flex-column">
            <label asp-for="ChefId">Name of Chef:</label>
            <select asp-for="ChefId" class="form-select">
                @foreach (Chef c in ViewBag.Chefs)
                {
                    <option value="@c.ChefId">@c.FirstName @c.LastName</option>
                }
            </select>
        </div>
        <div class="col-3 d-flex flex-column">
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" class="form-select">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <input type="submit" value="Add Dish" class="btn btn-sm btn-info mt-2">
        </div>
    </div>
</form>
