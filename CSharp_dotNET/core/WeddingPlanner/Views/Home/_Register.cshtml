@model User

<form asp-action="CreateUser" asp-controller="Home" method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
        <small>Password must be at least 8 characters</small>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Confirm"></label>
        <input asp-for="Confirm" class="form-control">
        <span asp-validation-for="Confirm" class="text-danger"></span>
    </div>
    <input type="submit" value="Register" class="btn btn-sm btn-primary m-2">
</form>