@model Wedding

<div class="d-flex justify-content-around align-items-center border-bottom">
    <div>
        <h4 class="pt-2">Welcome, @Context.Session.GetString("Username")!</h4>
    </div>
    <div class="d-flex justify-content-center">
        <a href="weddings" class="pt-2 text-info">Home |&nbsp;&nbsp;&nbsp;</a>
        <a href="weddings/new" class="pt-2 text-info">Plan a Wedding |</a>
        <form asp-action="Logout" asp-controller="Home" method="post">
            <input type="submit" value="Logout" class="btn btn-link text-danger">
        </form>
    </div>
</div>


<h2 class="mt-3">Plan a Wedding</h2>

<div class="col-6 mt-3">

    <form asp-action="CreateWedding" asp-controller="Home" method="post">
        <div class="mb-3 d-flex gap-4 justify-content-between">
            <label asp-for="WedderOne"></label>
            <input asp-for="WedderOne" class="form-control">
            <span asp-validation-for="WedderOne" class="text-danger"></span>
        </div>
        <div class="mb-3 d-flex gap-4 justify-content-between">
            <label asp-for="WedderTwo"></label>
            <input asp-for="WedderTwo" class="form-control">
            <span asp-validation-for="WedderTwo" class="text-danger"></span>
        </div>
        <div class="mb-3 d-flex gap-4 justify-content-between">
            <label asp-for="DateOfWedding"></label>
            <input asp-for="DateOfWedding" class="form-control">
            <span asp-validation-for="DateOfWedding" class="text-danger"></span>
        </div>
        <div class="mb-3 d-flex gap-4 justify-content-between">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <input type="submit" value="Create" class="btn btn-sm btn-info">
    </form>

</div>